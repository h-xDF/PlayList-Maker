<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="MainScreenStyle">
        <item name="android:background">@color/text_black</item>
        <item name="android:orientation">vertical</item>
        <item name="android:paddingHorizontal">@dimen/double_spacing_16</item>
        <item name="android:paddingVertical">14dp</item>
    </style>

    <style name="ButtonRoundStyle">
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/text_black</item>
        <item name="android:textSize">@dimen/text_normal_14_sp</item>
        <item name="cornerRadius">@dimen/spacing_42</item>
    </style>

    <style name="SwitchColorStyle">
        <item name="thumbTint">@color/background_blue</item>
        <item name="trackTint">@color/background_blue_48</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">@dimen/text_normal_16_sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextViewItemTrack">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">@dimen/text_small_11_sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextViewRegular">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">@dimen/text_normal_16_sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextViewRegularAudioPlayerValue">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">@dimen/text_small_13_sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextViewHeader">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/text_header_22_sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextViewNormalAudioPlayer">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/text_normal_14_sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_marginVertical">@dimen/spacing_8</item>
    </style>

    <style name="TextViewMediumSongError">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_normal_19_sp</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_marginHorizontal">@dimen/spacing_8</item>
    </style>

    <style name="IconStyle">
        <item name="android:layout_width">@dimen/spacing_24</item>
        <item name="android:layout_height">@dimen/spacing_24</item>
        <item name="android:backgroundTint">?attr/colorOnPrimary</item>
        <item name="tint">@color/white</item>
    </style>
</resources>